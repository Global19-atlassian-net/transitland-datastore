{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Transitland Datastore Operator",
  "type": "object",
  "required": ["name", "onestopId"],
  "properties": {
    "onestopId": {
      "type": "string",
      "format": "operator-onestop-id"
    },
    "name": { "type": "string" },
    "tags": { "type": "object" },
    "geometry": { "type": "object" },
    "identifiers": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": ["identifier"],
        "properties": {
          "identifier": { "type": "string" }
        }
      }
    },
    "serves": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "format": "stop-onestop-id"
      }
    },
    "doesNotServe": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "format": "stop-onestop-id"
      }
    }
  }
}
